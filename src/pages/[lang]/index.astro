---
import ButtonMain from '~/components/ButtonMain.astro';
import Default from '~/layouts/Default.astro';
import Section from '~/components/Section.astro';
import { Languages } from '../../utils/types';

export async function getStaticPaths() {
	return Languages.values().map((language: any) => {
		return {
			params: { lang: language },
			props: { language },
		};
	});
}
const { language } = Astro.props;
---

<Default title="Design">
	<header class="relative">
		<nav class="background_gradient h-[70vh] flex flex-col w-full items-center justify-center">
			<h1 class="mb-50px text-5xl font-bold mx-auto text-center">
				{language == 'it' ? <>Scuola del Design</> : <>School of Design</>}
			</h1>
			<div class="grid grid-cols-2 gap-6">
				<ButtonMain
					icon_class="fa fa-telegram"
					name={language == 'it' ? 'CANALE' : 'CHANNEL'}
					url="https://t.me/designpolimichannel"
				/>
				<ButtonMain
					icon_class="fa fa-telegram"
					name={language == 'it' ? 'GRUPPO' : 'GROUP'}
					url="https://t.me/designpolimi"
				/>
			</div>
		</nav>
	</header>

	<main class="relative flex flex-col py-50px">
		<Section Language={language} slug="c"
			>{
				language == 'it' ? (
					<>
						Design della <b>Comunicazione</b>
					</>
				) : (
					<>
						<b>Communication</b> Design
					</>
				)
			}</Section
		>
		<Section Language={language} slug="m"
			>{
				language == 'it' ? (
					<>
						Design della <b>Moda</b>
					</>
				) : (
					<>
						<b>Fashion</b> Design
					</>
				)
			}</Section
		>
		<Section Language={language} slug="p"
			>{
				language == 'it' ? (
					<>
						Design del <b>Prodotto</b>
					</>
				) : (
					<>
						<b>Product</b> Design
					</>
				)
			}</Section
		>
		<Section Language={language} slug="i"
			>{
				language == 'it' ? (
					<>
						Design degli <b>Interni</b>
					</>
				) : (
					<>
						<b>Internal</b> Design
					</>
				)
			}</Section
		>
		<Section Language={language} slug="mas">
			Design
			<b> Engineering</b><br />
			<b> Product Service System</b>
			Design
			<br />
			<b>Digital Interaction</b> Design
		</Section>
	</main>

	<footer>PoliNetwork</footer>
</Default>
